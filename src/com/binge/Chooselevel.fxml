<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:controller="com.binge.Chooselevel"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="1000" prefHeight="1000"
            fx:id="gridpane">

    <children>
        <!-- 標題文字 -->
        <Text layoutX="350.0" layoutY="100.0" text="請選擇關卡">
            <font>
                <Font size="60.0"/> <!-- 字體放大 -->
            </font>
        </Text>

        <!-- 第一排按鈕 -->
        <Button text="關卡 1" layoutX="100.0" layoutY="250.0" prefWidth="150.0" prefHeight="100.0" style="-fx-font-size: 24px;" onAction="#switchToScene1" />
        <Button text="關卡 2" layoutX="260.0" layoutY="250.0" prefWidth="150.0" prefHeight="100.0" style="-fx-font-size: 24px;" onAction="#switchToScene2" />
        <Button text="關卡 3" layoutX="420.0" layoutY="250.0" prefWidth="150.0" prefHeight="100.0" style="-fx-font-size: 24px;" onAction="#switchToScene3" />
        <Button text="關卡 4" layoutX="580.0" layoutY="250.0" prefWidth="150.0" prefHeight="100.0" style="-fx-font-size: 24px;" onAction="#switchToScene4" />
        <Button text="關卡 5" layoutX="740.0" layoutY="250.0" prefWidth="150.0" prefHeight="100.0" style="-fx-font-size: 24px;" onAction="#switchToScene5" />

        <!-- 第二排按鈕 -->
        <Button text="關卡 6" layoutX="100.0" layoutY="400.0" prefWidth="150.0" prefHeight="100.0" style="-fx-font-size: 24px;" onAction="#switchToScene6" />
        <Button text="關卡 7" layoutX="260.0" layoutY="400.0" prefWidth="150.0" prefHeight="100.0" style="-fx-font-size: 24px;" onAction="#switchToScene7" />
        <Button text="關卡 8" layoutX="420.0" layoutY="400.0" prefWidth="150.0" prefHeight="100.0" style="-fx-font-size: 24px;" onAction="#switchToScene8" />
        <Button text="關卡 9" layoutX="580.0" layoutY="400.0" prefWidth="150.0" prefHeight="100.0" style="-fx-font-size: 24px;" onAction="#switchToScene9" />
        <Button text="關卡 10" layoutX="740.0" layoutY="400.0" prefWidth="150.0" prefHeight="100.0" style="-fx-font-size: 24px;" onAction="#switchToScene10" />
    </children>
</AnchorPane>